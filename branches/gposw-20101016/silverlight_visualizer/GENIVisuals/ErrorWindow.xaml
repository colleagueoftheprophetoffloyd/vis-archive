<controls:ChildWindow x:Class="GENIVisuals.ErrorWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="Error">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="ErrorTextBlock" Text="Insert error message here." VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" />
        <TextBlock Name="InstructionsTextBlock" Text="The program will try to continue, but things may not work correctly after the error." VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" TextWrapping="Wrap" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="2" />
    </Grid>
</controls:ChildWindow>