<gv:VisualControl 
    x:Class="GENIVisuals.ScalarValue"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:gv="clr-namespace:GENIVisuals"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <sdk:Label x:Name="Label" Height="64" Margin="8" Content="Label" VerticalAlignment="Center" FontSize="32" HorizontalAlignment="Left" Foreground="#FF853D3D"/>
        <ProgressBar Name="ProgressBar" Grid.Column="1" Width="100" Height="20" Margin="8" VerticalAlignment="Center" HorizontalAlignment="Right"  />
    </Grid>
</gv:VisualControl>
